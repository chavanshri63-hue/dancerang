rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Public read for banners.json and banner images; write admin-only
    match /app_content/banners/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.token.admin == true;
    }

    // Default: authenticated-only elsewhere
    match /{allPaths=**} {
      allow read, write: if request.auth != null;
    }
  }
}
